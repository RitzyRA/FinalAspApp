@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="container-fluid justify-content-center col-md-4">
    <div class="card row justify-content-center">
        <div class="card-header">@ViewData["Title"] - Create a new account.</div>
        <div class="card-body justify-content-center">
            <div>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <p id="emailWarn" style="display: none; color: red; margin-bottom: 0.5rem; font-size: 0.75rem">Enter a valid email.</p>
                        <input asp-for="Input.Email" class="form-control" onblur="validateEmail(); enableButton()" required/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Input.Password"></label>
                        <p id="passWarn1" style="display: none; color: red; margin-bottom: 0.5rem; font-size: 0.75rem">Passwords must be 8 characters or longer.</p>
                        <p id="passWarn2" style="display: none; color: red; margin-bottom: 0.5rem; font-size: 0.75rem">Passwords must have at least one number.</p>
                        <p id="passWarn3" style="display: none; color: red; margin-bottom: 0.5rem; font-size: 0.75rem">Passwords must have at least one lowercase ('a'-'z').</p>
                        <p id="passWarn4" style="display: none; color: red; margin-bottom: 0.5rem; font-size: 0.75rem">Passwords must have at least one uppercase ('A'-'Z').</p>
                        <p id="passWarn5" style="display: none; color: red; margin-bottom: 0.5rem; font-size: 0.75rem">Passwords must have at least one non alphanumeric character.</p>
                        <input asp-for="Input.Password" class="form-control"  oninput="validatePassword(); enableButton()" required />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <p id="repeatWarn" style="display: none; color: red; margin-bottom: 0.5rem; font-size: 0.75rem">The password and confirmation password do not match.</p>
                        <input asp-for="Input.ConfirmPassword" class="form-control" oninput="validatePasswordRepeat(); enableButton()" required />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button id="sendButton" type="submit" class="btn btn-primary mt-2" disabled>Register</button>
                </form>
            </div>
        </div>
    </div>
</div>